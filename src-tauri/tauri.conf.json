{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tauri-audio-eq",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/**", "$RESOURCE/*", "*/**"]
      },
      "shell": {
        "all": false,
        "open": true,
        "scope": [
          {"name": "binaries/redis-server", "sidecar": true},
          {"name": "binaries/redis-cli", "sidecar": true}
        ]
      }
    },
    "windows": [
      {
        "title": "tauri-audio-eq",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "externalBin": [
        "binaries/redis-server",
        "binaries/redis-cli"
      ],
      "identifier": "com.audio-eq.dev",
      "resources": [
        "assets/test-file.wav",
        "assets/chirp.wav",
        "assets/*.wav",
        "assets/440-whitenoise.wav",
        "redis.conf",
        "dump.rdb",
        "text.log"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
